                                    <i class="fa fa-camera-retro"></i>
                                    <label class="fileContainer">
                                        Đổi ảnh đại diện
                                        <input type="file" />
                                    </label>
                                </form>
                            </figure>
                        </div>
                    </div>
                    <div class="col-lg-10 col-sm-9">
                        <div class="timeline-info">
                            <ul>
                                <li class="admin-name">
                                    <h5>{{profileInfo.FirstName}} {{profileInfo.MiddleName}} {{profileInfo.LastName}}</h5>
                                    @*<span>(biệt danh)</span>*@
                                </li>
